    "prisma": "^5.22.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "api",
    "express",
    "prisma",
    "railway",
    "chorenest"
